<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <mime-type type="application/x-ica">
    <comment>Citrix ICA connection parameters</comment>
    <acronym>ICA</acronym>
    <sub-class-of type="text/plain"/>
    <magic>
      <match priority="80" type="string" offset="0:999"
	     value="[ApplicationServers]" />
    </magic>
    <icon  name="Citrix-Receiver" />
    <glob pattern="*.ica"/>
    <glob pattern="*.ICA"/>
  </mime-type>
  <mime-type type="application/vnd.citrix.receiver.configure">
    <comment>Citrix Store Configuration Record</comment>
    <sub-class-of type="text/xml"/>
    <magic>
      <match priority="80" type="string" offset="0:39"
	     value="Services version=" />
    </magic>
    <icon  name="Citrix-Receiver" />
    <glob pattern="*.cr" weight="40"/>
    <glob pattern="*.CR" weight="40"/>
  </mime-type>
</mime-info>
